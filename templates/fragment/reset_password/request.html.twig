{% extends '@FerienpassCms/fragment/reset_password/_base.html.twig' %}

{% block content %}

    <h3 class="text-xl">Nennen Sie uns Ihre E-Mail-Adresse</h3>

    <p class="mt-2 text-sm leading-5 text-gray-600 dark:text-gray-200 max-w">Geben Sie Ihre uns bekannte
        E-Mail-Adresse ein.</p>

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="mt-6">
            {% include '@FerienpassCore/Alert/error.html.twig' with {message: flash_error} %}
        </div>
    {% endfor %}

    <div class="mt-8">

        {{ form_start(form) }}
        <div class="space-y-6">
            {% for widget in form %}
                {{ form_row(widget) }}
            {% endfor %}
        </div>
        {{ form_end(form) }}

    </div>

    <div class="mt-6">
        {% include '@FerienpassAdmin/components/back-link.html.twig' with {uri: '/'} %}
    </div>

{% endblock %}
